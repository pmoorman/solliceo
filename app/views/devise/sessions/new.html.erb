<div class="main-section">
    <div class="w-container container login_container">
      <div class="w-row">
        <div class="w-col w-col-4">
         <div class="w-clearfix dashboard login_form">
          <div class="dashboard-whitebox login_form">
            <h2>Login</h2>
            <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
              <%= f.error_notification %>
            <h4>Email</h4>
            <%= f.input :email, label: false, :required => true, :autofocus => true, input_html: { class: 'w-input' } %>
            <h4>Wachtwoord</h4>
            <%= f.input :password, label: false, :required => true, input_html: { class: 'w-input' } %>
            <h4 class="login_remember">Onthoud mij</h4>
            <%= f.input :remember_me, label: false, :as => :boolean, input_html: { class: 'login_checkbox' } if devise_mapping.rememberable? %>
          </div>
          <%= link_to '<i class="icon-share-alt" style="margin-left:-5px; margin-top:-1px;"></i>'.html_safe, new_registration_path(resource_name), title: 'Nog geen account? >> Aanmaken', :class => "button button-secondary button-left button_tooltip", data: {toggle: 'modal', placement: 'bottom'} %>
          <%= f.submit "Log in", class: "button button-main login_button" %>
          <%= link_to '<i class="icon-flag" style="margin-left:-5px; margin-top:-1px;"></i>'.html_safe, new_password_path(resource_name), title: 'Wachtwoord vergeten?', :class => "button button-secondary button-right button_tooltip", data: {toggle: 'modal', placement: 'bottom'} %>
          <% end %>
        </div>
        </div>
        <div class="w-col w-col-8">
          <h1 class="w-hidden-medium w-hidden-small w-hidden-tiny">Klaar voor actie?</h1>
          <h3 class="w-hidden-medium w-hidden-small w-hidden-tiny">Gebruik Solliceo. Kom bij je droombaan op gesprek.</h3>
        </div>
      </div>
    </div>
  </div>