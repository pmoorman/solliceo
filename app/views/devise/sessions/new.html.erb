


<div class="main-section">
  <div class="w-container container">
    <div class="w-row">
      <div class="w-col w-col-4">
        <div class="w-clearfix dashboard">
          <div class="dashboard-whitebox">
            <h2>Login</h2>

            <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: ' '}) do |f| %>
  						<div class="form-inputs">
						    <%= f.input :email, :required => false, :autofocus => true %>
						    <%= f.input :password, :required => false %>
						    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  						</div>

  					<%= render "devise/shared/links" %>
          </div>
          <%= link_to '<i class="icon-user" style="margin-left:-5px; margin-top:-1px;"></i>'.html_safe, '#user_edit_form', class: 'button button-secondary button-left', title: 'Jouw Account', rel: 'tooltip', data: {toggle: 'modal', resource: current_user, resource_name: current_user} %>

          <%= f.button :submit, "Sign in", class: "button button-main" %>
          
          <a class="button button-right button-secondary" href="http://vicancy.com/solliceo/formulier/" target="_blank"data-toggle="tooltip" title="Video aanmaken"><i class="icon-film" style="margin-left:-5px; margin-top:-1px;"></i></a>

        </div>

        <% end %>
      </div>

      <div class="w-col w-col-8">
        <h1 class="w-hidden-medium w-hidden-small w-hidden-tiny">Klaar voor actie?</h1>
        <h3 class="w-hidden-medium w-hidden-small w-hidden-tiny">Gebruik Solliceo. Kom bij je droombaan op gesprek.</h3>
      </div>
    </div>
  </div>
</div> 