<div class="container" style="height: 100%;">
<div class="well" style="background-color:#fff; width: 500px;">
  
<h2>Account aanmaken</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Naam', :required => true %>
    <%= f.input :email, label: 'Email', :required => true, :autofocus => true %>
    <%= f.input :password, label: 'wachtwoord', :required => true %>
    <%= f.input :password_confirmation, label: 'herhaal wachtwoord', :required => true %>
    </br>
    <%= f.input :image, label: "Upload een profielfoto" %>
    <%= f.input :image_remote_url, label: "of gebruik een URL voor je profielfoto", placeholder: 'bijv. je LinkedIn profielfoto' %>
  </div>

  <div>
    <%= f.button :submit, "Account aanmaken", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>