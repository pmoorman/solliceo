<div class="container" style="height: 100%;">
<div class="well" style="background-color:#fff; width: 500px;">
  
<h3>Account settings</h3>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-horizontal">
    <%= f.input :name, :required => true, :autofocus => true %> 
    <%= f.input :email, :required => true %>
    <%= f.input :phone, label: "Telefoon" %>
    <%= f.input :linkedin, label: "LinkedIn account", placeholder: "Plaats je 'public profile' hier" %>
    <%= f.input :twitter, label: "Twitter account", placeholder: "bijv. @qieter" %>
    <%= f.input :residence, label: "Woonplaats" %>
    <%= f.input :image, label: "Upload een profielfoto" %>
    <%= f.input :image_remote_url, label: "of gebruik een URL naar je profielfoto" %>    
  </div>

  <div style="margin-bottom: 50px;">
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>

  <div class="form-inputs">
    <div class="well" style="width:410px; margin-left:30px;">
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <h4>Change password</h4>
      <%= f.input :password, label: "nieuw wachtwoord", :autocomplete => "uit", :hint => "leave it blank if you dlaat open als je dit niet wilt wijzigen", :required => false %>
      <%= f.input :password_confirmation, :required => false %>
    </div>
  </div>

  <div>
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Verwijder mijn account", registration_path(resource_name), :data => { :confirm => "Weet je het zeker?" }, :method => :delete %>.</p>

<%= link_to "Terug", :back %>

</div>
</div>