<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>
  <h3>Jouw gegevens</h3>
  <div class="form-inputs form-horizontal">
    <%= f.input :name, label: 'Naam', :required => true, :autofocus => true %> 
    <%= f.input :email, label: 'Email', :required => true %>
    <%= f.input :phone, label: 'Telefoon', placeholder: '06-12345432' %>
    <%= f.input :linkedin, label: "LinkedIn", placeholder: "copy & paste je 'public profile' hier" %>
    <%= f.input :twitter, label: "Twitter", placeholder: "bijv: @qieter" %>
    <%= f.input :residence, label: "Woonplaats", placeholder: 'bijv: Amsterdam' %>
    <%= f.input :image, label: "Upload een profielfoto" %>
    <%= f.input :image_remote_url, label: "of gebruik een URL voor je profielfoto", placeholder: 'bijv. je LinkedIn profielfoto' %>    
  </div>

  <div style="margin-bottom: 50px;">
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>

  <div class="form-inputs">
    <div class="well" style="width:410px; margin-left:30px;">
      <h3>Wijzig wachtwoord</h3>
      <%= f.input :password, label:"Nieuw wachtwoord", placeholder: 'nieuw wachtwoord', :autocomplete => "off", :required => false %>
      <%= f.input :password_confirmation, placeholder: 'bevestig wachtwoord', :required => false %>
    </div>
  </div>

  <div>
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Verwijder mijn account</h3>

<p>Baan gevonden? :-) <%= link_to "Beeindig mijn account", registration_path(resource_name), :data => { :confirm => "Weet je het zeker? Al je gegevens gaan verloren." }, :method => :delete %>.</p>

